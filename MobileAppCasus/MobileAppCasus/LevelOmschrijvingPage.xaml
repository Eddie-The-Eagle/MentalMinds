<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppCasus.LevelOmschrijvingPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="{StaticResource Key=Accent}">
                <Label x:Name="LevelName" Text="Level Naam" HorizontalTextAlignment="Center" TextColor="{StaticResource Key=Text}" FontSize="36"/>
            </Frame>
            <Label x:Name="LevelOmschrijving" HorizontalTextAlignment="Center" TextColor="{StaticResource Key=Text}" FontSize="20" Margin="0, 30, 0, 0"/>
            <Button HorizontalOptions='Center' Text="START" BackgroundColor="{StaticResource Key=Primary}" TextColor="White" CornerRadius="20" FontSize="20" WidthRequest="250" Clicked="Button_Clicked" Margin="0, 30, 0, 70" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Clicked="Home_Clicked"/>
        <ToolbarItem Text="Log uit" Clicked="LogUit_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>